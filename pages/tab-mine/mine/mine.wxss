/**index.wxss**/
page{
  height: 100%;
}
.me{
  height: 100%;
}
.userinfo{
  position: relative;
  width: 750rpx;
  height: 200rpx;
  background: #ffb83d;
  color: #fff;
  display: flex;
  align-items: center;
  border-bottom: 30rpx solid #f1f1f1;
}
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-left: 40rpx;
  border-radius: 50%;
  background: #fff;
}
.userinfo-avatar-image{
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 20rpx auto;
}

.userinfo-nickname {
  color: #fff;
  font-size: 36rpx;
  margin-left:42rpx; 
  width: 650rpx;
}

.usermotto{
  margin-top: 10rpx;
}

.about{

}

.swiper-tab{  
    width: 100%;  
    border-bottom: 4rpx solid #f1f1f1;  
    text-align: center;  
    line-height: 88rpx;
    background: #fff;
    font-size: 34rpx;
    height: 88rpx;
}  
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 50%;  
    color: #777777;  
}  
.on{ color: #ffb83d;  
    border-bottom: 5rpx solid #ffb83d;}  
  
.my_empty{ display: block; height: 100%; width: 100%; overflow: hidden; background: #fff;}  
.swiper-box view{  
    /* text-align: center;   */
}  
.my_empty image{
display: block;
width: 236rpx;
height: 188rpx;
margin: 136rpx auto 0;
}
.tab-content{
  display: none;
}
.tab-content.cur{
  display: block;
}
/*列表 list*/
.topics{
  background: #f1f1f1;
}
.scroll-posts-list{
  overflow: hidden;
}
.posts-list{
  position: relative;
  overflow: hidden;
  padding: 0px 36rpx;
  background: #fff;
  margin-bottom: 16rpx;
}
.posts-list .posts-title{
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
  padding: 30rpx 0;
  color: #000000;
}
.posts-list-info{
  overflow: hidden;
  display: flex;
  margin-top: 30rpx;
  padding-bottom: 20rpx;
}
.posts-list-info .userimg{
  overflow: hidden;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.posts-list-info .item-box{
  flex: 1;
  margin-left: 30rpx;
}
.posts-list-info .item-box .userinfo .username,
.posts-list-info .item-box .userinfo .time{
  flex: 1;
  color: #b2b2b2;
  font-size: 28rpx;
  line-height: 60rpx;
}
.item-box .posts-title{
  height: 80rpx;
  margin: 20rpx 0;
  font-size: 30rpx;
  color: #000000;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.posts-list-info .item-box  .posts-tag{
  display: inline-block;
  width: 80rpx;
  height: 38rpx;
  text-align: center;
  line-height: 38rpx;
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #80bd01;
  border: 1rpx solid #80bd01;
}
.posts-list-info .item-box .hot{
  color: red;
  border: 1rpx solid red;
}
.posts-list .bar-info .bar-info-item{
  display: inline-block;
  margin-right: 50rpx;
  line-height: 66rpx;
}
.posts-list .bar-info .bar-info-item-icon{
  display: inline-block;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.posts-list .bar-info .bar-info-item-number{
  display: inline-block;
  vertical-align: middle;
  color: #ffb83d;
}
.posts-list .bar-info .time{
  float: right;
  color: #b2b2b2;
  vertical-align: middle;
  margin-right: 0;
}

.posts-list .bar-info .bar-info-item2{
  display: inline-block;
  float: right;
  line-height: 66rpx;
}
.posts-list .bar-info .bar-info-item2 .bar-info-item-number{
  color: #80bd01;
}
/*loading*/
.loading-font{
  font-size: 30rpx;
}
.no-more{
  text-align: center;
  height: 80rpx;
  color: #b2b2b2;
  line-height: 80rpx;
}