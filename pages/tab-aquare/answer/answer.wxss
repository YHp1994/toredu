page{
  height: 100%;
}
.answer{
  height: 100%;
background: #f1f1f1;
}
.detail-post-content{
  overflow-x: hidden;
  padding: 38rpx 35rpx 34rpx 35rpx;
  color: #000;
  background: #ffffff;
  margin-bottom: 16rpx;
}
.content-info {
  color: #000;
  word-wrap: break-word;
}
