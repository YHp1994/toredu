  background: #ffffff;
  padding: 21rpx 32rpx;
  width: 100%;
  height: 402rpx;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}

.input-count {
  position: absolute;
  right: 35rpx;
  bottom:135rpx;
}
.input-count .cur{
  color: #b2b2b2;
}
