.search-bar{
    width:100%;
    position: fixed;
    height:110rpx;
    top:0;
    background: #ffffff;
}

.search-bar-warper{
    background:#ffffff;
    height:80rpx;
    padding-top: 30rpx;
    border-radius: 10rpx;
    padding-left: 20rpx;
    align-items: center;
    display: flex;
    /*width:100%;*/
    margin: 0 30rpx 0 30rpx;
    border-bottom: 1px solid #ffb83d;
}
.search-input{
  font-size: 34rpx;
  color: #000;
  padding-left: 20rpx;
  width: 480rpx;
}
.search-btn{
  display: inline-block;
  width: 110rpx;
  height: 54rpx;
  line-height: 54rpx;
  font-size: 30rpx;
  color: #ffb83d;
  border: 1px solid #ffb83d;
  text-align: center;
  border-radius: 10rpx;
}




.empty-search{
  background: #ffffff;
}

.empty-search image{
  width: 236rpx;
  height: 188rpx;
  display: block;
  margin: 200rpx auto 0;
}




.result{
    margin-top:100rpx;
    background: #eeeeee;
    display: flex;
    flex-direction: column;
}

.result-group{
    background: #ffffff;
}

.group{
    display: flex;
    flex-direction: row;
    height:80rpx;
    align-items: flex-end;
    padding-bottom: 10rpx;
    padding-left: 20rpx;
    background: #eeeeee;
}

.group-image{
    width:50rpx;
    height:50rpx;
}

.group-text{
    margin-left:10rpx;
}

.result-item{
    display: flex;
    background:#ffffff;
    border-bottom: 1rpx #eeeeee solid;
    flex-direction: row;
    margin-left: 20rpx;
    padding-left: 10rpx;
    height:80rpx;
    align-items: center;
}

.result-author{
    color:#929292;
}

.album-item{
    height:80rpx;
    
    display: flex;
    flex: row;
    border-bottom: #eeeeee 1rpx solid;
    padding:20rpx 20rpx;
    align-items: center;
}

.album-image{
    height:80rpx;
    width:80rpx;
    border-radius: 10rpx;
}

.album-info{
    display: flex;
    flex-direction: column;
    padding-left: 15rpx;
}

.album-name{
    font-size: 14px;
    line-height: 20px;
}

.album-author{
    font-size: 12px;
    color:#929292;
    line-height: 20px;
}

.songs-action-button{
    height:40rpx;
    width:40rpx;
    margin-right: 10rpx;
}

.singer-item{
    height:80rpx;
    display: flex;
    flex: row;
    padding:10rpx 20rpx;
    align-items: center;
}

.singer-image{
    height:80rpx;
    width:80rpx;
    border-radius: 50%;
}

.singer-text{
    display: flex;
    border-bottom: 1rpx #eeeeee solid;
    height:80rpx;
    align-items: center;
    padding:6rpx 20rpx;
    flex-grow: 1;
}


.mv-item{
    display: flex;
    flex-direction: column;
    border-bottom: #eeeeee 1rpx solid;
    padding:20rpx 20rpx;
}

.mv-name{
    font-size: 14px;
    line-height: 20px;
}

.mv-author{
    font-size: 12px;
    color:#929292;
    line-height: 20px;
}


